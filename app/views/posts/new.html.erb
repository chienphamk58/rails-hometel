<h1>New Post</h1>
<hr>

<%= form_for(@post, {multipart: true}) do |f| %>
    <div class="field form-group">
      <%= f.label :post_road %><br />
      <%= f.text_field :post_road, class:"form-control",placeholder:"Road",style:"width:60%" %>
      <%= f.text_field :post_district, class:"form-control",placeholder:"District",style:"width:60%" %>
      <%= f.text_field :post_city, class:"form-control",placeholder:"City",style:"width:60%" %>
    </div>
    <br/>

    <div class="field form-group">
      <%= f.label :post_price %><br />
      <%= f.number_field :post_price,class:"form-control",placeholder:"Price",style:"width:25%"%>
    </div>
    
    <div class="field form-group">
      <%= f.label :roomtype_id %><br />
      <%= f.number_field :roomtype_id,class:"form-control",placeholder:"Room Type",style:"width:25%"%>
    </div>
    
    <br />

    <div class="field form-group">
      <%= f.label :post_phone %><br />
      <%= f.text_field :post_phone,class:"form-control",placeholder:"Phone" ,style:"width:25%"%>
    </div>

    <div class="field form-group">
      <%= f.label :post_intro %>
      <%= f.text_area :post_intro,rows:"5", autocomplete: "off",class:"form-control",placeholder:"Describe",style:"width:60%" %>
    </div>

    <div class="field form-group">
      <%= f.label :post_picture %><br />
      <%= f.file_field :post_picture,class:"form-control" ,style:"width:60%"%>
    </div>

    <div class="actions">
      <%= f.submit "Create Post",class:"btn btn-default" %>
    </div>

<% end %>